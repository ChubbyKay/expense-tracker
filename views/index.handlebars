<div class="container mt-5">
  <div class="row justify-content-center">

    <!--category bar-->

    <label class="mr-sm-2 sr-only" for="category">Category</label>
    <select class="custom-select mr-sm-2" id="category">
      <option selected>類別...</option>
      <option value="family">家居物業</option>
      <option value="transportation">交通外出</option>
      <option value="entertainment">休閒娛樂</option>
      <option value="food">餐飲食品</option>
      <option value="other">其他</option>
    </select>
  </div>

  <!--total Amount-->
  <div class="totalAmount m-5">
    <span>總金額：</span>
    <div class="row justify-content-center">
      <h2> 12345</h2>
    </div>
  </div>

  <!--total record list-->
  <div class="container mt-5">
    <div class="list-group">

      {{!-- {{#each record}} --}}
      <li class="list-group-item">

        <div class="list-left">
          <div class="category-icon"><i class="fas fa-home"></i>{{this.icon}}</div>
        </div>


        <div class="list-middle">
          <div class="list-name">午餐{{this.name}}</div>
          <div class="list-date">2020/8/2{{this.date}}</div>
        </div>


        <div class="list-right">
          <div class="list-amount ml-2">200元{{this.amount}}</div>
        </div>
        <div class="list-button">
          <a class="btn btn-success" href="/edit">修改</a>
          <form action="/delete" method="POST" style="display: inline;">
            <button class="btn btn-danger ml-2" type="submit">刪除</button>
          </form>
        </div>
      </li>
      {{!-- {{/each}} --}}

    </div>
  </div>
  <div class="row justify-content-center">
    <div class="mt-3">
      <a class="btn btn-primary" href="/new">新增支出</a>
    </div>
  </div>
</div>